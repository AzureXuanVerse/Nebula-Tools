{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "星塔旅人指令生成器",
  "version": "0.1.0",
  "identifier": "com.nebula.tools",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:4321",
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Nebula",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
